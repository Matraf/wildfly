<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="standalone-bdew"
    xmlns="urn:jboss:galleon:feature-group:1.0">

    <feature-group name="standalone-full" />

    <feature spec="core-service.management.ldap-connection">
        <param name="ldap-connection" value="ldapconnection"/>
        <param name="url" value="${ldap.address:ldap://localhost:1234}"/>
        <param name="search-dn" value="${ldap.search.dn:uid=jobtest1,ou=People,dc=ee,dc=psi}"/>
        <param name="search-credential" value="${ldap.search.credential:start123}"/>
    </feature>

    <feature spec="core-service.management.security-realm">
        <param name="security-realm" value="LDAPRealm"/>
        <feature spec="core-service.management.security-realm.authentication.ldap">
            <param name="connection" value="ldapconnection"/>
            <param name="username-attribute" value="uid"/>
            <param name="base-dn" value="${ldap.base.dn:ou=People,dc=ee,dc=psi}"/>
        </feature>
    </feature>
    
    <feature spec="core-service.management.management-interface.http-interface">
        <param name="security-realm" value="LDAPRealm"/>
    </feature>

</feature-group-spec>

